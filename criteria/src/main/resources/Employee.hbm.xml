<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.example.Employee" table="employee_table">

        <id name="employeeId" column="employee_Id" type="int">
        </id>
        <property name="name" column="employee_name" type="string" />
        <property name="experience" column="emp_experience" type="int" />
        <property name="role" column="emp_role" type="string" />
        <property name="salary" column="emp_salary" type="int" />
    </class>
</hibernate-mapping>