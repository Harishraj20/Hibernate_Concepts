<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hbm:hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hbm:hibernate-mapping xmlns:hbm="http://www.hibernate.org/xsd/hibernate-mapping"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping
                                           http://www.hibernate.org/xsd/hibernate-mapping-3.0.xsd">
   
   <class name="com.example.Library" table="library_table">
       <id name="lib_id" column="lib_id">
           <generator class="identity"/>
       </id>
       <property name="lib_name" column="lib_name"/>
       
       <list name="student" table="library_student" inverse="true" cascade="all">
           <key column="lib_id"/>
           <index column="list_index"/>
           <many-to-many column="stud_id" class="com.example.Student"/>
       </list>
   </class>

</hbm:hibernate-mapping>
